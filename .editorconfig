root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 120
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = tab
insert_final_newline = true
ij_continuation_indent_size = 4

[*.{js,ts,jsx,tsx,cjs,mjs,html,vue,xml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false